   <%
   @user||=current_user;
   remote||=false
   %>

   <%= simple_form_for(@user, :as => 'user', :url => finish_signup_path(@user), :html => { role: 'form'}, remote:remote) do |f| %>
   <%= f.error_notification %>
   <div class="controls">
    <%= f.input :email, :autofocus => true, input_html:{:value => ''}, class: 'form-control input-lg', placeholder: 'Example: email@me.com' %>
    <p class="help-block">Please confirm your email address. No spam.</p>
  </div>
  <div class="actions">
    <%= f.button :submit, 'Continue', :class => 'btn btn-primary' %>
  </div>
  <% end %>