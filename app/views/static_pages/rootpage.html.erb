    <%= render partial: "portfolio" %>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading"><%= t '.contact_title' %></h2>
                    <hr class="primary">
                    <p><%= t '.contact_text' %></p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 text-center">
                    <i class="fa fa-phone fa-3x wow bounceIn"></i>
                   <!-- <p>123-456-6789</p> -->
                </div> 
                <div class="col-lg-2 text-center">
                    <div class="row">
                       <a href="mailto:<%=HomeSite::Contacts[:email]%>" target="_blank"> <i class="fa fa-envelope-o fa-3x wow bounceIn" data-wow-delay=".1s"></i></a>
                    </div>
                    <div class="row">
                    <a href="mailto:<%=HomeSite::Contacts[:email]%>" target="_blank"><%=HomeSite::Contacts[:email]%></a>
                    </div>
                </div>

                <div class="col-lg-2 text-center">
                    <a href=<%=HomeSite::Contacts[:vk]%> target="_blank"><i class="fa fa-vk fa-3x wow bounceIn" data-wow-delay=".1s"></i></a>
                </div>

                <div class="col-lg-2 text-center">
                    <a href=<%=HomeSite::Contacts[:github]%> target="_blank"><i class="fa fa-github fa-3x wow bounceIn" data-wow-delay=".1s"></i></a>
                </div>

                <div class="col-lg-2 text-center">   
                    <a href=<%=HomeSite::Contacts[:google_plus]%> target="_blank"><i class="fa fa-google-plus fa-3x wow bounceIn" data-wow-delay=".1s"></i></a>
                </div>

                <div class="col-lg-2 text-center">   
                    <a href="skype:<%=HomeSite::Contacts[:skype]%>" target="_blank"><i class="fa fa-skype fa-3x wow bounceIn" data-wow-delay=".1s"></i></a>
                </div>

            </div>
        </div>
    </section>
