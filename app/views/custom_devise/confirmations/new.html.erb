
<h2>Resend confirmation instructions</h2>
<div class="row">
    <div class="col-md-offset-1 col-md-4">
        <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), method: :post,  html:{class:"form-inline"}) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>
        <div class="form-inputs">
           <%= f.input :email, required: true, autofocus: true, class:"form-control",  label: false %>
           <%= f.button :submit, "Send", class:"btn btn-primary" %>
       </div>
       <% end %>
   </div>
</div>
<%= render "shared/session_buttons" %>